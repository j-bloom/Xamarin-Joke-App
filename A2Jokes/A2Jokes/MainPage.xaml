<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="A2Jokes.MainPage"
             Title="Random Jokes"
             BackgroundColor="SteelBlue">

    <StackLayout Margin="20,35,20,20">
        <Label x:Name="jokeToDisplay" VerticalOptions="CenterAndExpand"
               FontSize="Medium" TextColor="Black" Text="Please press button to select Joke category!" />
        <FlexLayout Direction="Column">
            <Button HorizontalOptions="CenterAndExpand" VerticalOptions="EndAndExpand" 
                    FontSize="Medium" Text="Get Any Joke"
                    Clicked="Any_Joke_Button_Clicked"/>
            <Button HorizontalOptions="CenterAndExpand" VerticalOptions="EndAndExpand" 
                    FontSize="Medium" Text="Get a 'Pun' Joke"
                    Clicked="Pun_Joke_Button_Clicked"/>
            <Button HorizontalOptions="CenterAndExpand" VerticalOptions="EndAndExpand" 
                    FontSize="Medium" Text="Get a Programming Joke" 
                    Clicked="Programming_Joke_Button_Clicked"/>
            <Button HorizontalOptions="CenterAndExpand" VerticalOptions="EndAndExpand" 
                    FontSize="Medium" Text="See Saved jokes"
                    Clicked="See_Favourites_Button_Clicked"/>
        </FlexLayout>
    </StackLayout>

</ContentPage>
